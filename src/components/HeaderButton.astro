---
interface Props {
    href: string;
}

const { href } = Astro.props;
---
<a href={`${href}`}
class="rounded-full bg-slate-800 py-2 px-4 text-sm font-medium
text-white hover:bg-slate-700 focus:outline-none focus-visible:outline-2 
focus-visible:outline-offset-2 focus-visible:outline-white/50 active:text-slate-400 
mr-2 mb-2">
    <slot name="before"/>
    <slot />
    <slot name="after"/>
</a>
